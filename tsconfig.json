{
  "extends": "./.config/tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "verbatimModuleSyntax": false,
    "noPropertyAccessFromIndexSignature": false,
    "noEmit": true
  },
  "include": ["src/**/*.ts"]
}