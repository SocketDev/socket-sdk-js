{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/cjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
