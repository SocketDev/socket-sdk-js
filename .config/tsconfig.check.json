{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "node"],
    "verbatimModuleSyntax": false
  },
  "include": ["../**/*.ts", "../**/*.mts"],
  "exclude": ["../**/node_modules/**/*"]
}
