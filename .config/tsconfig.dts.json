{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist",
    "rootDir": "../src",
    "verbatimModuleSyntax": false,
    "noPropertyAccessFromIndexSignature": false,
    "skipLibCheck": true
  },
  "include": ["../src/**/*.ts", "../types/**/*.ts"]
}
