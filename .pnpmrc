# Block all install scripts (no native dependencies)
ignore-scripts=true

# Enable pre/post scripts for the main project (e.g., prepare -> husky)
enable-pre-post-scripts=true

# Dependency management
# Wait 7 days (10080 minutes) before installing newly published packages
# This provides a security buffer to detect compromised packages before installation
minimumReleaseAge=10080
auto-install-peers=true
strict-peer-dependencies=false
save-exact=true